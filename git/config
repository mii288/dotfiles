[core]
	editor = vim
    autocrlf = false

[color]
    ui = true

[alias]
    # FYI: https://github.com/GitAlias/gitalias
    a = add
    ap = add -p
    br = branch
    cancel = reset --soft HEAD^
    cm = commit -m
    cmf = "!f() { \
            git log --oneline \
                | peco \
                | cut -d " " -f 1 \
                | xargs -I @ git commit --fixup "@"; \
            }; f"
    rbi = "!f() { \
            git log --oneline \
                | peco \
                | cut -d " " -f 1 \
                | xargs -I @ git rebase -i --autosquash "@"; \
            }; f"
    edit = commit --amend
    co = checkout
    cob = checkout -b
    cbeta = checkout beta
    crc = checkout rc
    cdev = checkout develop
    cma = checkout master
    cp = cherry-pick
    st = status
    mg = merge
    pma = pull origin master
    current-branch = rev-parse --abbrev-ref HEAD
    brclean = !git branch --merged | grep -v \\* | xargs -I % git branch -d %

[push]
	default = current
[pull]
	rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

