[core]
	editor = /usr/local/bin/vim
    autocrlf = false

[color]
    ui = true

[alias]
    a = add
    ap = add -p
    br = branch
    cancel = reset --soft HEAD^
    cm = commit -m
    ca = commit --amend
    co = checkout
    cob = checkout -b
    cdev = checkout develop
    cma = checkout master
    cp = cherry-pick
    st = status
    mg = merge
    pma = pull origin master
    current-branch = rev-parse --abbrev-ref HEAD

[push]
	default = current
[pull]
	rebase = false
[init]
	defaultBranch = main
